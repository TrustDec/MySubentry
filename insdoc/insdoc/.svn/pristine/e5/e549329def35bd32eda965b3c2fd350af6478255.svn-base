<h1>TextField</h1> 
<h3>介绍</h3>
<p>
文件框
</p>
<img src="../../img/FileField.jpg" />
<h3>示例代码</h3>
<pre class="brush:js;">
Ext.define('App.demo.form.field.FileField',{
	
	init: function(){
		var me = this;
		var view = Ext.create('Ins.form.Form',{
			fields : [{
					//label
					text:"文件框",
					name:"attachment",
					xtype:"ins_filefield",
					//校验规则
					regex : /\.(doc|docx|xls|xlsx|ppt|pptx|pdf)$/i,
					//校验不通过提示信息
				    regexText: '文档必须是以下格式：doc、docx、xls、xlsx、ppt、pptx、pdf',

					//获取焦点事件 me:Ext.Component;event:Ext.event.Event此处为focus事件。
					onFieldFocus : function(me, event){
//						console.log(me);
//						console.log(event);
//						alert("获取焦点事件    值:"+me.value+" 类型:"+me.xtype);
					},
					//失去焦点事件 me:Ext.Component;event:Ext.event.Event此处为focus事件。
					onFieldBlur : function(me, event){
//						console.log(me);
//						console.log(event);
//						alert("失去焦点事件    值:"+me.value+" 类型:"+me.xtype);
					},
					//改变内容事件  me:Ext.Component;改变后的值newValue，改变之前的值oldValue
					onFieldChange : function(me, newValue, oldValue){
//						console.log(me);
//						alert("内容改变事件    新值:"+newValue+" 旧值:"+oldValue);
					},
					//验证提示消息默认采用side效果：显示在右边 其他效果有 qtip,title,under,none,[element id]
					msgTarget: 'side'
			}]
		});
		return view;
	}
});
</pre>
<h3>类名</h3>
<code>Ins.form.field.FileField</code>
<h4>别名</h4>
<code>ins_filefield</code>
<h3>继承自</h3>
<code>Ext.form.field.File</code>
<h3>构造对象</h3>
<pre class="brush:js;">
{
	text:"文件框",
	name:"attachment",
	xtype:"ins_filefield",
	regex : /\.(doc|docx|xls|xlsx|ppt|pptx|pdf)$/i,
	regexText: '文档必须是以下格式：doc、docx、xls、xlsx、ppt、pptx、pdf'
}
</pre>
