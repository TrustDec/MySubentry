<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>平台使用手册</title>
<base href="../" />
<link href="../common/include.css" rel="stylesheet" />
</head>
<body id="bodyId">
<h1>TextField</h1> 
<h3>介绍</h3>
<p>
日期选择框
</p>
<img src="../../img/datefield.jpg" />
<h3>示例代码</h3>
<pre class="brush:js;">
Ext.define('App.demo.form.field.DateField',{
	
	init: function(){
		var me = this;
		var view = Ext.create('Ins.form.Form',{
			fields : [{
					//label
					text:"日期选择框",
					name:"birthday",
					xtype:"ins_datefield",
					value:new Date(),
					allowBlank:false,
					//获取焦点事件 me:Ext.Component;event:Ext.event.Event此处为focus事件。
					onFieldFocus : function(me, event){
						console.log(Utils.formatDate(me.value,'YYYY-MM-DD'));
//						console.log(me);
//						console.log(event);
						alert("获取焦点事件    值:"+me.getRawValue()+" 类型:"+me.xtype);
					},
					//失去焦点事件 me:Ext.Component;event:Ext.event.Event此处为focus事件。
					onFieldBlur : function(me, event){
//						console.log(me);
//						console.log(event);
						alert("失去焦点事件    值:"+me.getRawValue()+" 类型:"+me.xtype);
					},
					//改变内容事件  me:Ext.Component;改变后的值newValue，改变之前的值oldValue
					onFieldChange : function(me, newValue, oldValue){
						console.log(me);
						alert("内容改变事件    新值:"+Utils.formatDate(newValue,'YYYY-MM-DD')+" 旧值:"+Utils.formatDate(oldValue,'YYYY-MM-DD'));
					},
					//验证提示消息默认采用side效果：显示在右边 其他效果有 qtip,title,under,none,[element id]
					msgTarget: 'side'
			}]
		});
		return view;
	}
});
</pre>
<h3>类名</h3>
<code>Ins.form.field.DateField</code>
<h4>别名</h4>
<code>ins_datefield</code>
<h3>继承自</h3>
<code>Ext.form.field.Date</code>
<h3>构造对象</h3>
<pre class="brush:js;">
{
	//label
	text:"日期选择框",
	name:"birthday",
	xtype:"ins_datefield"
}
</pre>
