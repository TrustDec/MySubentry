<h1>BoxLayout(布局)</h1> 
<h3>介绍</h3>
<p>
水平或垂直方向排列控件。	
</p>
<img src="../../img/boxlayout.jpg" />
<h3>示例代码</h3>
<pre class="brush:js;">
Ext.define('App.demo.layout.boxlayout.View',{
	
	init: function(){
		
		var view = Ext.create('Ins.layout.BoxLayout',{
			//布局标题
			title:'BoxLayout布局',
			//view排列方向 '-','|'（分为水平和竖直两种方向）
			direction:'|',
			//存放区域视图
			views: [
				App.getView('App.demo.layout.boxlayout.Box1'),
				App.getView('App.demo.layout.boxlayout.Box2'),
				App.getView('App.demo.layout.boxlayout.Box3')
			],
			//对应view所占比例。Number类型数组。
			comSize:[100,200,300],
			useAppBg:true
		});
		return view;
	}
});
</pre>
<h3>类名</h3>
<code>Ins.layout.BoxLayout</code>
<h4>别名</h4>
<code>alias : ["widget.ins_boxlayout"]</code>
<h3>继承自</h3>
<code>Ext.panel.Panel</code>
<h3>构造对象</h3>
<pre class="brush:js;">
	var view = Ext.create('Ins.layout.BoxLayout',{
			//布局标题
			title:'BoxLayout布局',
			//view排列方向 '-','|'（分为水平和竖直两种方向）
			direction:'|',
			//存放区域视图
			views: [],
			//对应view所占比例。Number类型数组。
			comSize:[],
			useAppBg:true
		});
</pre>
<h3>属性</h3>
<table class="table table-bordered table-striped table-hover table-hover">
<thead style="background-color: #555;color: #FFFFFF;">
<tr><th>属性名</th><th>属性值类型</th><th>描述</th><th>默认值</th></tr>
</thead>
<tbody>
<tr>
<td>title</td>
<td>String</td>
<td>标题</td>
<td>默认为空不显示</td>
</tr>
<tr>
<td>views</td>
<td>view[]</td>
<td>存放显示的view视图</td>
<td>无</td>
</tr>
<tr>
<td>direction</td>
<td>String</td>
<td>view排列方向'-'水平排列，'|'竖直排列</td>
<td>'-'水平排列</td>
</tr>
<tr>
<td>comSize</td>
<td>Number[]</td>
<td>对应view所占比例。Number类型数组。</td>
<td>等分</td>
</tr>
<tr>
<td>useAppBg</td>
<td>boolean</td>
<td>是否使用系统指定背景色</td>
<td>false</td>
</tr>
</tbody>
</table>

