<h2>二、前台代码的编写</h2>
<p>前台代码编写规范:</p>
<pre class="brush:js;">
//App.sys.View类名必须和包路径相同
Ext.define('App.sys.View',{
	//init有平台调用
	init: function(){
		
		var me = this;
		
		var window = Ext.create('Ins.window.Window',{
			title:"窗口组件必须手动销毁"
		});
		me.window = window;
		
		//代码书写区域start
		var view = Ext.create('Ins.layout.BorderLayout',{
			location: ['left','center'],			
			views: [
				App.getView('App.sys.Left'),
				App.getView('App.sys.Center')
			],
			fold: [true, false]
		});
		
		return view;
		//代码书写区域end
	},
	//init方法return 的的视图销毁时调用该方法
	beforeDestroy: function(){
		Ext.destroy(this.window);
	}
	
});
</pre>
<img src="../../img/codetool4.jpg" />
