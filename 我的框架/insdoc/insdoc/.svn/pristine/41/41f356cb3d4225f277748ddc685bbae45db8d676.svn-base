<h1>TopMessage消息组件</h1> 
<h3>介绍</h3>
<p>
顶部消息,提示，警告，错误
</p>
<img src="../../img/topmessage.jpg" />
<h3>示例代码</h3>
<pre class="brush:js;">
Ext.define('App.demo.app.TopMessage',{
	
	init: function(){
		var view = Ext.create('Ins.window.Window',{
			title:"测试消息窗口",
			width:600,
			height:200,
			actionButtons : [{
				text: '顶部提示消息',
				iconCls: 'icon-save',
				handler: function(){
					TopMessage.info("顶部 提示消息");
				}
			},{
				text: ' 顶部 警告消息',
				iconCls: 'icon-save',
				handler: function(){
					TopMessage.warn("顶部 警告消息");
				}
			},{
				text: '顶部 错误消息',
				iconCls: 'icon-save',
				handler: function(){
					TopMessage.error("顶部 错误消息");
				}
			}],
			//工具栏按钮方向
			actionButtonsAlign : 'top'
		});
		view.show();
		return null;
	}	
});
</pre>
<h3>类名</h3>
<code>TopMessage</code>
<h4>别名</h4>
<code>无</code>
<h3>继承自</h3>
<code>Ext.dom.Helper</code>
<h3>构造对象</h3>
<pre class="brush:js;">
TopMessage.info("顶部 提示消息");
TopMessage.warn("顶部 警告消息");
TopMessage.error("顶部 错误消息");
</pre>
