<h1>视频播放插件</h1> 
<h3>介绍</h3>
<p>
mp4,flv播放插件
</p>
<img src="../../img/player.jpg" />
<h3>示例代码</h3>
<pre class="brush:js;">
Ext.define('App.demo.player.Player',{
	
	init: function(){
		var view = Ext.create('Ins.player.Player',{
			//视频文件地址，支持mp4，flv
			file: FILE_SYS_URL + "/test.mp4",
			//视频开始图片
			image: FILE_SYS_URL + "/image.jpg",	
			//是否自动播放(手机上不起作用)
			autostart: false,
			//设置宽高
			width: 1000,
			height: 600,
			//播放器准备就绪事件
			onPlayerReady: function(){
				console.log("播放器已做好播放准备");
			},
			//改变音量事件，返回改变后的音量
			onPlayerVolume: function(volumeValue){
				console.log(volumeValue);
				console.log("改变音量后的值");
			},
			//播放事件
			onPlayerPlay: function(){
				console.log("开始播放时调用的事件");
			},
			//暂停事件
			onPlayerPause: function(){
				console.log("点击暂停时调用绑定的方法");
			},
			//播放完成事件
			onPlayerComplete: function(){
				console.log("播放完成后调用的事件");
			},
			//改变播放进度时事件，position
			onPlayerSeek: function(position, offset){
				console.log(position);
				console.log(offset);
				console.log("改变播放进度时调用的事件");
			},
			//播放事件事件，每秒执行好几次
			onPlayerTime: function(position){
//				console.log(position);
//				console.log("播放事件事件");
			},
			//点击全屏按钮时调用的事件 fullscreen boolean值，true：变为全屏，false：取消全屏
			onPlayerFullscreen: function(fullscreen){
				console.log(fullscreen);
				console.log("点击全屏按钮时调用的事件。");
			}
				
		});
		return view;
	}	
});	
</pre>
