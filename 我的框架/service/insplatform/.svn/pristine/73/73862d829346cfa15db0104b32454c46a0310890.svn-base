package com.insplatform.module.osta.eval.demand.controller;

import java.util.*;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;


import com.insframework.system.base.controller.BaseController;
import com.insframework.system.curruser.CurrentUser;
import com.insframework.system.map.Condition;
import com.insplatform.module.osta.eval.demand.model.OstaEvalDemandWrite;
import com.insplatform.module.osta.eval.demand.service.OstaEvalDemandWriteService;

@Controller
@RequestMapping("/px/ostaevaldemandwrite")
public class OstaEvalDemandWriteController extends BaseController{
	
	@Autowired
	private OstaEvalDemandWriteService ostaEvalDemandWriteService;
	
	/**
	 * 加载数据
	 * @param request
	 * @param response
	 * @return
	 */
	@RequestMapping("/loadAllGrid")
	public @ResponseBody Map<String, Object> loadAllGrid(
			HttpServletRequest request, HttpServletResponse response){
		Condition condition = this.getCondition(request);
		return ostaEvalDemandWriteService.loadAllGrid(condition);
	}
	
	/**
	 * 加载数据
	 * @param request
	 * @param response
	 * @return
	 */
	@RequestMapping("/loadAllList")
	public @ResponseBody Map<String, Object> loadAllList(
			HttpServletRequest request, HttpServletResponse response){
		Condition condition = this.getCondition(request);
		return this.getMessager().success().data(ostaEvalDemandWriteService.loadAllList(condition));
	}	
	
	
	/**
	 * 加载单条数据
	 * @param id
	 * @return
	 */
	@RequestMapping("/load")
	public @ResponseBody Map<String, Object> load(@RequestParam("id") String id,HttpServletRequest request){
		CurrentUser user = this.getCurrentUser(request);
		return this.getMessager().success().data(ostaEvalDemandWriteService.load(id,user));		
	}
	
	/**
	 * 新增
	 * @param dict
	 * @return
	 */
	@RequestMapping("/add")	
	public @ResponseBody Map<String, Object> add(OstaEvalDemandWrite ostaevaldemandwrite, HttpServletRequest request){
		CurrentUser user = this.getCurrentUser(request);
		ostaevaldemandwrite.setCreateUserId(user.getId());
		ostaevaldemandwrite.setCreateUserName(user.getName());
		ostaevaldemandwrite.setCreateTime(new Date());
		ostaEvalDemandWriteService.save(ostaevaldemandwrite);
		return this.getMessager().success();
	}
	
	/**
	 * 编辑
	 * @param dict
	 * @return
	 */
	@RequestMapping("/update")	
	public @ResponseBody Map<String, Object> update(
		   @RequestParam("id") String id,
		   HttpServletRequest request){		
		OstaEvalDemandWrite ostaevaldemandwrite = ostaEvalDemandWriteService.get(id);
		this.bindObject(request, ostaevaldemandwrite);
		ostaevaldemandwrite.setCreateTime(new Date());
		ostaEvalDemandWriteService.update(ostaevaldemandwrite);
		return this.getMessager().success();
	}
	
	/**
	 * 删除
	 * @param request
	 * @return
	 */
	@RequestMapping("/delete")	
	public @ResponseBody Map<String, Object> delete(HttpServletRequest request){
		String [] ids = this.getSelectedItems(request);
		ostaEvalDemandWriteService.deleteByIds(ids);
		return this.getMessager().success();
	}

	/**
	 * 自主报表名
	 * @param dict
	 * @return
	 */
	@RequestMapping("/addReg")	
	public @ResponseBody Map<String, Object> addReg(HttpServletRequest request){
		CurrentUser user = this.getCurrentUser(request);
		String pid = request.getParameter("pid");
		Map<String, Object> map = ostaEvalDemandWriteService.addReg(pid,user);
		return this.getMessager().success().putAllMap(map);
	}

	/**
	 * 根据需求id获取当前用户获取的数据
	 * @param request
	 * @return
	 */
	@RequestMapping("/getIdByDemandId")	
	public @ResponseBody Map<String, Object> getIdByDemandId( @RequestParam("pid") String pid,HttpServletRequest request){
		CurrentUser user = this.getCurrentUser(request);
		String id =ostaEvalDemandWriteService.loadIdByDemandId(pid, user.getId());
		return this.getMessager().success().put("id", id);
	}

}
