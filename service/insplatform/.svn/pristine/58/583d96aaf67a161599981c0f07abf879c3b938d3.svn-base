package com.insplatform.module.attachment.repository;

import java.util.*;

import javax.servlet.http.HttpServletRequest;

import org.springframework.web.multipart.MultipartFile;

import com.insframework.system.base.repository.BaseRepository;
import com.insframework.system.curruser.CurrentUser;
import com.insplatform.module.attachment.model.AttachmentsFile;

import com.insframework.system.map.Condition;


public interface AttachmentsFileRepository extends BaseRepository<AttachmentsFile>{
	
	/**
	 * 加载数据
	 * @param request
	 * @param response
	 * @return
	 */
	Map<String, Object> loadAllGrid(Condition condition);
	
	/**
	 * 加载数据
	 * @param request
	 * @param response
	 * @return
	 */
	List<Map<String, Object>> loadAllList(Condition condition);
	
	/**
	 * 加载单条数据
	 * @param request
	 * @param response
	 * @return
	 */
	Map<String, Object> load(String id);
	
	/**
	 * 获取所有附件
	 * @param request
	 * @param response
	 * @return
	 */
	List<Map<String, Object>> loadAllByPid(String pid,String type);

	/**
	 * 根据文件名获取所有附件
	 * @param request
	 * @param attament
	 * @return
	 */
	List<MultipartFile> getMultipartFiles(HttpServletRequest request,
			String attament);

	/**
	 * 批量保存附件
	 * @param pid
	 * @param type 上传文件说明或者菜单名称
	 * @param files
	 * @param basePath
	 * @param baseUrl
	 * @param b
	 * @param user
	 * @return
	 * @throws Exception
	 */
	int batchSaveFiles(String pid,String type, List<MultipartFile> files, String basePath,
			String baseUrl, boolean b, CurrentUser user);
	
	/**
	 * 根据父id删除
	 * @param pids
	 * @param type
	 */
	void deleteFile(String [] pids,String type);
	
}
