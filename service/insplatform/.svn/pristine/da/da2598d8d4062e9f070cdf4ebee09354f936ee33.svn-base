package com.insplatform.module.question.repository.impl;



import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.insframework.system.base.repository.impl.BaseRepositoryImpl;
import com.insplatform.module.question.model.QuestionAnswer;
import com.insplatform.module.question.repository.QuestionAnswerRepository;

@Repository
public class QuestionAnswerRepositoryImpl extends BaseRepositoryImpl<QuestionAnswer> implements QuestionAnswerRepository{

	@Override
	public void deleteByQueIds(String[] ids) {
		String[] sqls = new String[ids.length];
		for(int i=0; i<ids.length; i++){
			sqls[i] = "delete from PX_QUESTION_ANSWER where que_id = '"+ids[i]+"'";
		}
		jdbcAssistant.batchUpdate(sqls);
	}

	@Override
	public List<Map<String, Object>> loadAnswerByQueId(String id) {
		String sql = "select * from px_question_answer where que_id='"+id+"' order by no";	
		List<Map<String, Object>> answer = jdbcAssistant.query(sql);
		int i = 0;	
		int j = 65;
		while(i < answer.size()){
			Map<String, Object> map = answer.get(i);
			char answerNo = (char) j;
			map.put("answerNo", answerNo);
			i++;
			j++;
		}
		return answer;
	}


	
	
}
